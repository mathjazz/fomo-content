msgid "Check Facebook Portal <a id=\"a1\">privacy settings</a>."
msgstr ""

msgctxt "tips_to_protect_yourself"
msgid "Keep your location data private"
msgstr ""

msgctxt "tips_to_protect_yourself"
msgid "Stop data collection by Facebook’s partners"
msgstr ""

msgctxt "tips_to_protect_yourself"
msgid "Note that when sharing data with third-parties services, the third-party privacy policy applies."
msgstr ""

msgctxt "tips_to_protect_yourself"
msgid "You can disable the camera and built-in microphone on Portal with a single tap or with a sliding switch. A red light next to the lens indicates the camera and microphone are off."
msgstr ""

msgctxt "personal_data_collected"
msgid "Name, email address, password, messages, photos"
msgstr "Name, E-Mail-Adresse, Passwort, Nachrichten, Fotos"

msgctxt "biometric_data_collected"
